  <content>
    <learning>
      <learningAssessment>
        <title>Knowledge Check</title>
        <lcInteraction>
          <lcMultipleSelect>
            <title />
            <lcQuestion>
              <description>
                <para>Select all answers that apply, and then click CHECK.</para>
                <para>What is the function of a bike's thumb shifters?</para>
              </description>
            </lcQuestion>
            <lcAnswerOptionGroup>
              <lcAnswerOption>
                <lcAnswerOptionContent>
                  <description>
                    <para>Select the preferred chain tension.</para>
                  </description>
                </lcAnswerOptionContent>
              </lcAnswerOption>
              <lcAnswerOption>
                <lcAnswerOptionContent>
                  <description>
                    <para>Control the bike's gearing mechanisms.</para>
                  </description>
                </lcAnswerOptionContent>
                <lcCorrectResponse lcName="lcCorrectResponse" />
              </lcAnswerOption>
              <lcAnswerOption>
                <lcAnswerOptionContent>
                  <description>
                    <para>Control the bike's speed.</para>
                  </description>
                </lcAnswerOptionContent>
              </lcAnswerOption>
              <lcAnswerOption>
                <lcAnswerOptionContent>
                  <description>
                    <para>Select the preferred gear ratio.</para>
                  </description>
                </lcAnswerOptionContent>
                <lcCorrectResponse lcName="lcCorrectResponse" />
              </lcAnswerOption>
            </lcAnswerOptionGroup>
            <lcFeedbackIncorrect>
              <description>
                <para>Incorrect. The correct answers are control the bike's gearing mechanisms and select the preferred gear ratio.</para>
              </description>
            </lcFeedbackIncorrect>
            <lcFeedbackCorrect>
              <description>
                <para>Correct!</para>
              </description>
            </lcFeedbackCorrect>
          </lcMultipleSelect>
        </lcInteraction>
      </learningAssessment>
