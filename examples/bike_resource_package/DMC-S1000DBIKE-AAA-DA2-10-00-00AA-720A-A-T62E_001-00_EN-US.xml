  <content>
    <learning>
      <learningAssessment>
        <title></title>
        <lcInteraction>
          <lcSequencing id="sequencing">
            <lcQuestion>
              <description>
                <para>Place the steps for installing a bike's stem in the correct order. First, select a step. Then use the up and down arrows to move the step to the correct position. Repeat for each step, and then click CHECK.</para>
              </description>
            </lcQuestion>
            <lcSequenceOptionGroup>
              <lcSequenceOption>
                <lcAnswerOptionContent>
                  <description>
                    <para>Remove any rust and corrosion with a clean, dry cloth and rubbing alcohol.</para>
                  </description>
                </lcAnswerOptionContent>
                <lcSequence lcName="lcSequence" lcValue="1" />
              </lcSequenceOption>
              <lcSequenceOption>
                <lcAnswerOptionContent>
                  <description>
                    <para>Install the stem in the steerer tube.</para>
                  </description>
                </lcAnswerOptionContent>
                <lcSequence lcName="lcSequence" lcValue="2" />
              </lcSequenceOption>
              <lcSequenceOption>
                <lcAnswerOptionContent>
                  <description>
                    <para>Adjust to align the stem with the wheel.</para>
                  </description>
                </lcAnswerOptionContent>
                <lcSequence lcName="lcSequence" lcValue="3" />
              </lcSequenceOption>
              <lcSequenceOption>
                <lcAnswerOptionContent>
                  <description>
                    <para>Firmly tighten the stem bolt.</para>
                  </description>
                </lcAnswerOptionContent>
                <lcSequence lcName="lcSequence" lcValue="4" />
              </lcSequenceOption>
              <lcSequenceOption>
                <lcAnswerOptionContent>
                  <description>
                    <para>Install the handlebar.</para>
                  </description>
                </lcAnswerOptionContent>
                <lcSequence lcName="lcSequence" lcValue="4" />
              </lcSequenceOption>
            </lcSequenceOptionGroup>
            <lcFeedbackIncorrect>
              <description>
                <para>Incorrect. The correct answers are shown.</para>
              </description>
            </lcFeedbackIncorrect>
            <lcFeedbackCorrect>
              <description>
                <para>Correct!</para>
              </description>
            </lcFeedbackCorrect>
