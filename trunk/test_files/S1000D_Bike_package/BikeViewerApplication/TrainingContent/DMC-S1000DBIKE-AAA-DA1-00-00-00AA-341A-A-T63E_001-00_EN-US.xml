  <content>
    <learning>
      <learningAssessment>
        <title>Knowledge Check</title>
        <lcInteraction>
          <lcMultipleSelect>
            <title />
            <lcQuestion>
              <description>
                <para>Select all answers that apply, and then click CHECK.</para>
                <para>How would you manually test your bike's brake system?</para>
              </description>
            </lcQuestion>
            <lcAnswerOptionGroup>
              <lcAnswerOption>
                <lcAnswerOptionContent>
                  <description>
                    <para>
										Hold the handlebar.
									</para>
                  </description>
                </lcAnswerOptionContent>
                <lcCorrectResponse lcName="lcCorrectResponse" />
              </lcAnswerOption>
              <lcAnswerOption>
                <lcAnswerOptionContent>
                  <description>
                    <para>
										Start riding the bike, and apply the brakes.
									</para>
                  </description>
                </lcAnswerOptionContent>
              </lcAnswerOption>
              <lcAnswerOption>
                <lcAnswerOptionContent>
                  <description>
                    <para>
										Push the bike, and apply the brakes.
									</para>
                  </description>
                </lcAnswerOptionContent>
                <lcCorrectResponse lcName="lcCorrectResponse" />
              </lcAnswerOption>
              <lcAnswerOption>
                <lcAnswerOptionContent>
                  <description>
                    <para>Ensure the wheels lock and the bike stops.</para>
                  </description>
                </lcAnswerOptionContent>
                <lcCorrectResponse lcName="lcCorrectResponse" />
              </lcAnswerOption>
            </lcAnswerOptionGroup>
            <lcFeedbackIncorrect>
              <description>
                <para>Incorrect. The correct answers are hold the handlebar; push the bike, and apply the brakes; and ensure the wheels lock and the bike stops.</para>
              </description>
            </lcFeedbackIncorrect>
            <lcFeedbackCorrect>
              <description>
                <para>Correct!</para>
              </description>
            </lcFeedbackCorrect>
          </lcMultipleSelect>
        </lcInteraction>
      </learningAssessment>
