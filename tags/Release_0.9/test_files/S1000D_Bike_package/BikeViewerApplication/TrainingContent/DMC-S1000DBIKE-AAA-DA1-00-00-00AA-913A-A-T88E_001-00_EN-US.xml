    <learning>
      <learningAssessment>
        <title>Post Test</title>
        <lcInteraction>
          <lcSingleSelect>
            <title />
            <lcQuestion>
              <description>
                <para>Select your answer, and then click NEXT.</para>
                <para>A cantilever brake is a type of __________ brake.</para>
              </description>
            </lcQuestion>
            <lcAnswerOptionGroup>
              <lcAnswerOption>
                <lcAnswerOptionContent>
                  <description>
                    <para>Disc</para>
                  </description>
                </lcAnswerOptionContent>
              </lcAnswerOption>
              <lcAnswerOption>
                <lcAnswerOptionContent>
                  <description>
                    <para>Drum</para>
                  </description>
                </lcAnswerOptionContent>
              </lcAnswerOption>
              <lcAnswerOption>
                <lcAnswerOptionContent>
                  <description>
                    <para>Hydraulic</para>
                  </description>
                </lcAnswerOptionContent>
